svHome=/home/pi/rpi-sous-vide
svBin=${svHome}/bin

alias allOff='$svBin/wrapper setHeaterDuty 0 ; $svBin/wrapper setSetpoint 0 ; $svBin/wrapper setHeater off; $svBin/wrapper setPump off'
alias off='$svBin/wrapper setHeaterDuty 0 ; $svBin/wrapper setSetpoint 0 ; $svBin/wrapper setHeater off; $svBin/wrapper setPump off'
alias allOn='$svBin/wrapper setHeater on; $svBin/wrapper setPump on'
alias pumpOn='$svBin/wrapper setPump on'
alias pumpOff='$svBin/wrapper setPump off'
